<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bluesky"
    android:orientation="vertical"
    tools:context=".ui.webservice.WebServiceFrag">

    <TextView
        android:id="@+id/utsav_webservice_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:paddingBottom="25dp"
        android:text="@string/webpage_welcome_msg"
        android:textAlignment="center"
        android:textColor="@color/red"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zip_code_textview"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/utsav_zip_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="5"
        android:inputType="numberDecimal"
        android:hint="@string/enter_zip_code_editxt"
        android:textStyle="bold"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/utsav_webservice_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/web_services_btn"
        android:textColor="@color/black"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/utsav_txtDisplayWeather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/details_textview"
        android:textColor="@color/black"
        android:textSize="24sp" />
</LinearLayout>